<div class="container">
  <h2>Contacts List</h2>
  
  <% if flash[:success] %>
    <div class="alert alert-success">
      <%= flash[:success] %>
    </div>
  <% elsif flash[:error] %>
    <div class="alert alert-danger">
      <%= flash[:error] %>
    </div>
  <% end %>

  <table class="table table-striped table-bordered container">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.id %></td>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td class="d-flex justify-content-center">
        <%= link_to 'Show', contact_path(contact), class: "btn btn-info btn-sm" %> |
        <%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-warning btn-sm" %> |
        <%= button_to 'Delete', contact_path(contact), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure you want to delete this contact?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="d-flex justify-content-center align-items-center my-4">
    <%= link_to 'Add New Contact', new_contact_path, class: 'btn btn-primary' %>
</div>
